# ============================================================
# TIER 1: Platform Secrets (set once in Vercel)
# ============================================================

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Application URL (production)
APP_URL=https://your-app.vercel.app

# Google OAuth App Credentials (for the OAuth flow itself)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=https://your-app.vercel.app/api/auth/callback

# OpenAI (for AI features)
OPENAI_API_KEY=sk-...

# SendGrid (for notifications)
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# GitHub (for deployer integration)
GITHUB_TOKEN=ghp_...

# Google Cloud Storage (for site publishing)
GCP_PROJECT_ID=your_gcp_project_id
PUBLIC_OBJECT_SEARCH_PATHS=your-bucket-name

# Microsoft Clarity (optional)
CLARITY_PROJECT_ID=your_clarity_project_id

# Google Ads Developer Token (platform-level, not per-client)
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token

# ============================================================
# TIER 2: External Worker Connections (5 separate services)
# Each needs a BASE_URL and API_KEY set in Vercel dashboard
# ============================================================

# Technical SEO Crawler (Playwright-based, heavy compute)
SEO_TECHNICAL_CRAWLER_API_KEY=
SEO_TECHNICAL_CRAWLER_BASE_URL=

# Core Web Vitals Monitor (long-running PageSpeed Insights)
SEO_CORE_WEB_VITALS_API_KEY=
SEO_CORE_WEB_VITALS_BASE_URL=

# SERP & Keyword Intelligence (scraping infrastructure)
SERP_INTELLIGENCE_API_KEY=
SERP_INTELLIGENCE_BASE_URL=

# Backlink & Authority Signals (analysis-heavy)
SEO_BACKLINKS_API_KEY=
SEO_BACKLINKS_BASE_URL=

# Competitive Intelligence (analysis-heavy)
SEO_COMPETITIVE_INTEL_API_KEY=
SEO_COMPETITIVE_INTEL_BASE_URL=

# ============================================================
# TIER 3: Per-Client Credentials
# GA4 Property IDs, GSC sites, Google Ads customer IDs are
# stored per-site in the database (site_google_credentials table).
# They are NOT environment variables.
# ============================================================

# Internal API Keys (for bidirectional Hermes <-> Worker communication)
SEO_SCHEDULER_API_KEY=
