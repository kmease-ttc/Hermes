{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "../server/services/**/*.ts", "../server/utils/**/*.ts"],
  "exclude": ["node_modules"]
}
