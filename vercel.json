{
  "framework": null,
  "buildCommand": "npx vite build",
  "installCommand": "npm install",
  "outputDirectory": "dist/public",
  "cleanUrls": true,
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/(.*).html",
      "headers": [
        { "key": "Content-Type", "value": "text/html; charset=utf-8" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/scan/:scanId/status", "destination": "/api/scan-status?scanId=:scanId" },
    { "source": "/api/report/free/:reportId", "destination": "/api/report-free?reportId=:reportId" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
